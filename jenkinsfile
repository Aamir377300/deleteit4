pipeline {
    agent any  // ✅ FIXED: Removed unnecessary '{}'

    tools {  // ✅ FIXED: Moved 'tools' inside 'pipeline', not inside 'agent'
        maven 'maven'
    }

    stages {  // ✅ FIXED: 'stages' is now correctly placed at the same level as 'agent'
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
}