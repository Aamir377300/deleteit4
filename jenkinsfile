pipeline {
    agent any  // ✅ FIXED: Changed 'agents' to 'agent' and removed '{}'

    tools {  // ✅ FIXED: 'tools' should be inside 'pipeline', not inside 'agent'
        maven 'maven'
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Run JAR') {
            steps {
                script {
                    def output = sh(script: 'java -jar target/simple-java-project-1.0-SNAPSHOT.jar', returnStdout: true).trim()

                    // Print output
                    echo "Output from JAR: ${output}"
                }
            }
        }
    }
}